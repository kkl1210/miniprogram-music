<view class="container">
  <text class="time">{{showTime.currentTime}}</text>
  <view class="control">
    <movable-area class="movable-area" bindtap="click">
      <movable-view class="movable-view" direction="horizontal" damping="1000" x="{{movableDis}}" bindchange="onChange" bindtouchend="onEnd"/>
      <progress class="progress" stroke-width="2" backgroundColor="#969696" activeColor="#fff" percent="{{progress}}"></progress>
    </movable-area>
  </view>
  <text class="time">{{showTime.totalTime}}</text>
</view>