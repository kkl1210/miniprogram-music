/* components/ bottom-modal/bottom-modal.wxss */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  z-index: 99;
  background: rgba(0, 0, 0, 0.6);
}

.panel {
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.modal .icon-shanchu {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  padding: 20rpx;
}
