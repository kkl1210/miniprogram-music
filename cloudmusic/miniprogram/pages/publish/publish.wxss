.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.footer {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

.publishbtn {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.img{
  height: 100%;
  width: 100%;
}
.image-wrap {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  text-align: center;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.image-select {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}

.icon-jiahao {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}
.icon-shanchu {
  position: absolute;
  top: 2rpx;
  right: 0;
  color: #fff;
  background-color: #000;
  opacity: 0.4;
  font-size: 28rpx;
}

.contentLength {
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}
